{
  "name": "@previewjs/app",
  "version": "1.9.1",
  "license": "AGPL-3.0",
  "author": {
    "name": "Fran√ßois Wouts",
    "email": "f@zenc.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fwouts/previewjs"
  },
  "bugs": {
    "url": "https://github.com/fwouts/previewjs/issues"
  },
  "homepage": "https://previewjs.com",
  "type": "commonjs",
  "main": "./dist/src/index.js",
  "scripts": {
    "prepublish": "cd .. && pnpm turbo run build --scope=@previewjs/app --no-deps --include-dependencies",
    "build": "rimraf dist && pnpm tsc && pnpm tsc -p client/tsconfig.json && vite build client",
    "client:dev": "vite client",
    "test": "vitest client",
    "e2e-test": "cross-env pnpm run -C ../e2e-test-runner dev -s $INIT_CWD -t $INIT_CWD/tests",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ."
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "react/prop-types": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "dependencies": {
    "@previewjs/vfs": "^1.1.5",
    "express": "^4.18.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "6.1.1",
    "@fortawesome/free-brands-svg-icons": "6.1.1",
    "@fortawesome/free-regular-svg-icons": "6.1.1",
    "@fortawesome/free-solid-svg-icons": "6.1.1",
    "@fortawesome/react-fontawesome": "0.1.18",
    "@monaco-editor/react": "4.4.5",
    "@previewjs/api": "workspace:*",
    "@previewjs/core": "workspace:*",
    "@previewjs/iframe": "workspace:*",
    "@previewjs/e2e-test-runner": "workspace:*",
    "@previewjs/plugin-react": "workspace:*",
    "@previewjs/plugin-solid": "workspace:*",
    "@previewjs/plugin-vue2": "workspace:*",
    "@previewjs/plugin-vue3": "workspace:*",
    "@previewjs/type-analyzer": "workspace:*",
    "@react-hook/window-size": "3.0.7",
    "@types/express": "4.17.13",
    "@types/fs-extra": "9.0.13",
    "@types/node": "17.0.8",
    "@types/prettier": "2.6.3",
    "@types/react": "18.0.14",
    "@types/react-dom": "18.0.5",
    "@typescript-eslint/parser": "5.28.0",
    "@vitejs/plugin-react": "1.3.2",
    "assert-never": "1.2.1",
    "autoprefixer": "10.4.7",
    "axios": "0.27.2",
    "clsx": "1.1.1",
    "cross-env": "7.0.3",
    "eslint": "7.32.0",
    "eslint-plugin-react": "7.30.0",
    "eslint-plugin-react-hooks": "4.5.0",
    "execa": "5.1.1",
    "framer-motion": "6.3.11",
    "fs-extra": "10.1.0",
    "mobx": "6.6.0",
    "mobx-react-lite": "3.4.0",
    "monaco-editor": "0.33.0",
    "postcss": "8.4.14",
    "prettier": "2.6.2",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "rimraf": "3.0.2",
    "tailwindcss": "3.1.3",
    "typescript": "4.7.3",
    "vite": "2.9.12",
    "vite-plugin-svgr": "2.1.0",
    "vitest": "0.15.1"
  }
}
