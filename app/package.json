  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fwouts/previewjs"
  },
  "bugs": {
    "url": "https://github.com/fwouts/previewjs/issues"
  },
  "homepage": "https://previewjs.com",
  "type": "commonjs",
  "main": "./dist/src/index.js",
  "scripts": {
    "prepublish": "cd .. && pnpm turbo run build --scope=@previewjs/app --no-deps --include-dependencies",
    "build": "rimraf dist && pnpm tsc && pnpm tsc -p client/tsconfig.json && vite build client",
    "client:dev": "vite client",
    "e2e-test": "ts-node --transpileOnly testing/run-test-suite.ts",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ."
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "react/prop-types": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "6.1.1",
    "@fortawesome/free-brands-svg-icons": "6.1.1",
    "@fortawesome/free-regular-svg-icons": "6.1.1",
    "@fortawesome/free-solid-svg-icons": "6.1.1",
    "@fortawesome/react-fontawesome": "0.1.18",
    "@monaco-editor/react": "4.4.1",
    "@previewjs/config": "1.0.4",
    "@previewjs/core": "2.0.0",
    "@previewjs/plugin-react": "2.1.0",
    "@previewjs/plugin-solid": "1.0.1",
    "@previewjs/plugin-vue2": "2.0.3",
    "@previewjs/plugin-vue3": "2.0.4",
    "@previewjs/vfs": "1.1.3",
    "@react-hook/window-size": "3.0.7",
    "assert-never": "1.2.1",
    "axios": "0.26.1",
    "clsx": "^1.1.1",
    "express": "4.17.3",
    "framer-motion": "6.2.8",
    "mobx": "6.5.0",
    "mobx-react-lite": "3.3.0",
    "monaco-editor": "0.33.0",
    "react": "18.0.0",
    "react-dom": "18.0.0"
  },
  "devDependencies": {
    "@previewjs/api": "workspace:*",
    "@previewjs/core": "workspace:*",
    "@previewjs/loader": "workspace:*",
    "@types/express": "4.17.13",
    "@types/fs-extra": "9.0.13",
    "@types/lodash": "4.14.181",
    "@types/react": "17.0.39",
    "@types/react-dom": "17.0.14",
    "@types/rimraf": "3.0.2",
    "@typescript-eslint/parser": "5.18.0",
    "@vitejs/plugin-react": "1.3.0",
    "autoprefixer": "10.4.4",
    "caller-callsite": "4.1.0",
    "chalk": "4.1.2",
    "eslint": "7.32.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.4.0",
    "execa": "5.1.1",
    "fs-extra": "10.0.1",
    "lodash": "4.17.21",
    "playwright": "1.20.2",
    "postcss": "8.4.12",
    "rimraf": "3.0.2",
    "tailwindcss": "3.0.23",
    "ts-node": "10.7.0",
    "ts-node-dev": "1.1.8",
    "typescript": "4.6.3",
    "vite": "2.9.1",
    "vite-plugin-svgr": "0.6.0"
  }
}
