  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/client.mjs",
      "types": "./dist/client.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "client": [
        "./dist/client.d.ts"
      ]
    }
  },
  "scripts": {
    "prepublish": "cd .. && turbo run build --scope=@previewjs/daemon --no-deps --include-dependencies",
    "build": "tsc && unbuild",
    "dev": "ts-node-dev --respawn src/main.ts"
  },
  "devDependencies": {
    "@previewjs/api": "workspace:*",
    "@previewjs/core": "workspace:*",
    "@previewjs/loader": "workspace:*",
    "@types/node": "^18.15.5",
    "exclusive-promises": "^1.0.3",
    "exit-hook": "^3.2.0",
    "is-wsl": "^2.2.0",
    "rimraf": "^4.4.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5",
    "unbuild": "^1.1.2"
  }
