{
  "name": "@previewjs/workspace",
  "author": {
    "name": "Fran√ßois Wouts",
    "email": "f@zenc.io"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/fwouts/previewjs"
  },
  "bugs": {
    "url": "https://github.com/fwouts/previewjs/issues"
  },
  "homepage": "https://previewjs.com",
  "scripts": {
    "check-deps": "ts-node scripts/check-deps.ts",
    "check-licenses": "ts-node scripts/check-licenses.ts",
    "release-apps": "ts-node scripts/release-apps.ts",
    "release-components": "ts-node scripts/release-components.ts",
    "vscode:build:dev": "cd ./integrations/vscode && build:dev",
    "lint": "eslint --max-warnings 0 '**/*.ts' '**/*.tsx'",
    "vite-ecosystem-ci:build": "turbo build --filter=@previewjs/config-helper-nextjs",
    "vite-ecosystem-ci:before-test": "cd testing && playwright install",
    "vite-ecosystem-ci:test": "export ONLY_REACT_VERSION=18 && turbo e2e-test --filter=@previewjs/plugin-react -- --retries=3 --workers=2"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.6",
    "@types/license-checker": "^25.0.3",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "assert-never": "^1.2.1",
    "depcheck": "^1.4.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-react": "^7.32.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "execa": "^5.1.1",
    "inquirer": "^8.2.5",
    "license-checker": "^25.0.1",
    "prettier": "^2.8.3",
    "ts-node": "^10.9.1",
    "turbo": "~1.6",
    "typescript": "^4.9.4"
  },
  "packageManager": "pnpm@7.25.0",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "^18",
        "react-dom": "^18"
      }
    },
    "packageExtensions": {
      "create-react-class": {
        "peerDependencies": {
          "react": "*"
        }
      }
    }
  }
}
