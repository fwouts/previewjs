{
  "name": "previewjs",
  "version": "1.30.1",
  "license": "https://previewjs.com/eula",
  "author": {
    "name": "Fran√ßois Wouts",
    "email": "f@zenc.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fwouts/previewjs"
  },
  "bugs": {
    "url": "https://github.com/fwouts/previewjs/issues"
  },
  "homepage": "https://previewjs.com",
  "publisher": "zenclabs",
  "displayName": "Preview.js",
  "icon": "logo.png",
  "description": "Get instant previews of your UI components, directly in your IDE",
  "keywords": [
    "react",
    "vue",
    "design",
    "preview",
    "components",
    "typescript"
  ],
  "categories": [
    "Visualization"
  ],
  "engines": {
    "vscode": "^1.71.2"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:jsx",
    "onLanguage:svelte",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:vue",
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Preview.js",
      "properties": {
        "previewjs.codelens": {
          "title": "CodeLens",
          "type": "boolean",
          "default": true,
          "description": "Show a link to open Preview.js above each detected component. Reload required."
        }
      }
    },
    "commands": [
      {
        "command": "previewjs.start",
        "title": "Start Preview.js server",
        "category": "Preview.js",
        "icon": "./logo.png"
      },
      {
        "command": "previewjs.stop",
        "title": "Stop Preview.js server",
        "category": "Preview.js"
      },
      {
        "command": "previewjs.reset",
        "title": "Reset Preview.js after clearing cache",
        "category": "Preview.js"
      }
    ],
    "keybindings": [
      {
        "command": "previewjs.start",
        "key": "ctrl+k v",
        "mac": "cmd+k v",
        "when": "previewjs.previewablesDetected"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "previewjs.previewablesDetected",
          "command": "previewjs.start",
          "group": "navigation"
        }
      ]
    }
  },
  "main": "./dist/index.js",
  "scripts": {
    "vscode:prepublish": "pnpm build",
    "build": "cd ../.. && turbo run build --filter=@previewjs/daemon && cd integrations/vscode && rimraf dist previewjs-1.30.1.vsix && tsc && node esbuild.mjs",
    "build:dev": "cross-env PREVIEWJS_PORT=9316 PREVIEWJS_MODULES_DIR=../../dev-workspace PREVIEWJS_PACKAGE_NAME=@previewjs/app pnpm build",
    "build:dev:pro": "cross-env PREVIEWJS_PORT=9316 PREVIEWJS_MODULES_DIR=../../dev-workspace PREVIEWJS_PACKAGE_NAME=@previewjs/pro pnpm build",
    "dev:install": "pnpm vsce package --no-dependencies && code --install-extension previewjs-1.30.1.vsix --force"
  },
  "devDependencies": {
    "@previewjs/daemon": "workspace:*",
    "@previewjs/loader": "workspace:*",
    "@types/vscode": "^1.71.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.24.2",
    "exclusive-promises": "^1.0.3",
    "execa": "^8.0.1",
    "get-port": "^7.1.0",
    "ovsx": "^0.10.1",
    "rimraf": "^6.0.1",
    "strip-ansi": "^7.1.0",
    "typescript": "^5.7.2",
    "vsce": "^2.15.0"
  }
}
