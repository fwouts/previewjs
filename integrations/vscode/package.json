{
  "name": "previewjs",
  "version": "1.16.1",
  "license": "https://previewjs.com/eula",
  "author": {
    "name": "Fran√ßois Wouts",
    "email": "f@zenc.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fwouts/previewjs"
  },
  "bugs": {
    "url": "https://github.com/fwouts/previewjs/issues"
  },
  "homepage": "https://previewjs.com",
  "publisher": "zenclabs",
  "displayName": "Preview.js",
  "icon": "logo.png",
  "description": "Get instant previews of your UI components, directly in your IDE",
  "keywords": [
    "react",
    "vue",
    "design",
    "preview",
    "components",
    "typescript"
  ],
  "categories": [
    "Visualization"
  ],
  "engines": {
    "vscode": "^1.71.2"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:jsx",
    "onLanguage:svelte",
    "onLanguage:typescriptreact",
    "onLanguage:vue",
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Preview.js",
      "properties": {
        "previewjs.livePreview": {
          "title": "Live Preview",
          "type": "boolean",
          "default": true,
          "description": "Update previews instantly, without waiting for saving. Reload required."
        },
        "previewjs.codelens": {
          "title": "CodeLens",
          "type": "boolean",
          "default": true,
          "description": "Show a link to open Preview.js above each detected component. Reload required."
        }
      }
    },
    "commands": [
      {
        "command": "previewjs.open",
        "title": "Open Preview.js",
        "category": "Preview.js",
        "icon": "./logo.png"
      }
    ],
    "keybindings": [
      {
        "command": "previewjs.open",
        "key": "ctrl+k v",
        "mac": "cmd+k v",
        "when": "editorLangId == javascript || editorLangId == javascriptreact || editorLangId == jsx || editorLangId == typescriptreact || editorLangId == vue"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == javascript || editorLangId == javascriptreact || editorLangId == jsx || editorLangId == typescriptreact || editorLangId == vue",
          "command": "previewjs.open",
          "group": "navigation"
        }
      ]
    }
  },
  "main": "./dist/index.js",
  "scripts": {
    "vscode:prepublish": "pnpm build",
    "build": "rimraf dist previewjs-1.16.1.vsix && tsc && node esbuild.js && shx cp -rL ../../node_modules/pnpm dist/pnpm && shx cp -rL ../../loader/src/release/* dist/",
    "prod": "pnpm vsce package --no-dependencies && pnpm dev:install",
    "dev": "cross-env PREVIEWJS_MODULES_DIR=../../dev-workspace PREVIEWJS_PACKAGE_NAME=@previewjs/app pnpm dev:build",
    "dev:pro": "cross-env PREVIEWJS_MODULES_DIR=../../../previewjs-pro/pro PREVIEWJS_PACKAGE_NAME=@previewjs/pro pnpm dev:build",
    "dev:build": "pnpm vsce package --no-dependencies && pnpm dev:install",
    "dev:install": "code --install-extension previewjs-1.16.1.vsix --force"
  },
  "devDependencies": {
    "@previewjs/server": "workspace:*",
    "@types/vscode": "1.71.0",
    "cross-env": "7.0.3",
    "esbuild": "0.15.16",
    "exclusive-promises": "^1.0.3",
    "execa": "5.1.1",
    "ovsx": "0.5.2",
    "rimraf": "3.0.2",
    "shx": "0.3.4",
    "typescript": "4.9.3",
    "vsce": "2.14.0"
  }
}
