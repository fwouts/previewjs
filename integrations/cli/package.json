    "previewjs": "dist/main.js"
  },
  "scripts": {
    "prepublish": "cd ../.. && turbo run build --scope=@previewjs/cli --no-deps --include-dependencies",
    "build": "rimraf dist && tsc && node esbuild.js && shx cp -rL ../../loader/node_modules/pnpm dist/pnpm && shx cp -rL ../../loader/src/release/* dist/",
    "dev": "cross-env PREVIEWJS_MODULES_DIR=$INIT_CWD/../../dev-workspace PREVIEWJS_PACKAGE_NAME=@previewjs/app ts-node-dev --respawn src/main.ts",
    "dev:pro": "cross-env PREVIEWJS_MODULES_DIR=$INIT_CWD/../../../previewjs-pro/dev-workspace PREVIEWJS_PACKAGE_NAME=@previewjs/pro ts-node-dev --respawn src/main.ts"
  },
  "devDependencies": {
    "@previewjs/api": "workspace:*",
    "@previewjs/loader": "workspace:*",
    "@types/node": "^18.14.5",
    "chalk": "^5.2.0",
    "commander": "^10.0.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.17.10",
    "open": "^8.4.2",
    "rimraf": "^4.2.0",
    "shx": "^0.3.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  }
