    "commander": "^9.4.1",
    "cross-env": "7.0.3",
    "esbuild": "0.15.14",
    "open": "^8.4.0",
    "rimraf": "3.0.2",
    "shx": "0.3.4",
    "ts-node-dev": "2.0.0",
    "typescript": "4.8.4"
