<idea-plugin require-restart="true">
    <id>com.previewjs.intellij.plugin</id>
    <name>Preview.js</name>
    <vendor url="https://previewjs.com">Zenc Labs</vendor>
    <description><![CDATA[
        <p>Preview.js lets you preview React, Solid and Vue components instantly in your IDE.</p>
        <p><img src="https://s3.previewjs.com/previewjs-overview.gif" width="350" /></p>
        <p><a href="https://previewjs.com/docs">Visit the online docs</a> to find out exactly how to configure Preview.js for your project.</p>
    ]]></description>
    <change-notes>
        See https://github.com/fwouts/previewjs/releases for the up-to-date changelog.
    </change-notes>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="com.previewjs.intellij.plugin.services.ProjectService"/>
        <notificationGroup id="Preview.js" displayType="BALLOON" />

<!--

IntelliJ Community Edition language list: JShellLanguage, SHRINKER_CONFIG, HTML, RELAX-NG, JSON5, JAVA, yaml, TOML, DeviceSpec, textmate, TEXT, kotlin, LogcatFilter, JQL, RoomSql, GitExclude, AndroidDataBinding, HgIgnore, IntegrationPerformanceTest, Lombok.Config, EditorConfig, JSON Lines, Properties, IgnoreLang, UAST, XPath2, AIDL, SPI, MultiDexKeep, KND, HtmlCompatible, XPath, AGSL, GitIgnore, DTD, , JSON, XHTML, Groovy, Markdown, Renderscript, Manifest, JVM, RegExp, XML, SVG, Shell Script, Smali

Generated with:

Language.getRegisteredLanguages().joinToString(", ") { l -> l.id }
-->

<!--        <codeInsight.inlayProvider language="IgnoreLang" implementationClass="com.previewjs.intellij.plugin.inlays.InlayProvider" />-->
<!--        <codeInsight.inlayProvider language="TypeScript JSX" implementationClass="com.previewjs.intellij.plugin.inlays.InlayProvider" />-->

        <codeInsight.inlayProviderFactory implementation="com.previewjs.intellij.plugin.inlays.InlayProviderFactory" />

    </extensions>

    <applicationListeners>
        <listener class="com.previewjs.intellij.plugin.listeners.ProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
