# See https://pnpm.io/npmrc#public-hoist-pattern
public-hoist-pattern=[]
hoist-pattern[]="@babel/*"
hoist-pattern[]="@storybook/builder-vite"
hoist-pattern[]="core-js"
hoist-pattern[]="react-is"
hoist-pattern[]="rxjs"
