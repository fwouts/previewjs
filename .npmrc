# See https://pnpm.io/npmrc#public-hoist-pattern
# If we kept the default, then @types/react would conflict with vue types for JSX definitions. 
public-hoist-pattern=[]
hoist-pattern[]="@babel/*"
hoist-pattern[]="@vue/compiler-core"
hoist-pattern[]="react-is"
hoist-pattern[]="semver"
hoist-pattern[]="vscode-languageserver-textdocument"
# https://github.com/vitest-dev/vitest/issues/899
hoist-pattern[]="vite"

strict-peer-dependencies=false
auto-install-peers=true
