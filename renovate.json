{
  "extends": ["config:base"],
  "branchConcurrentLimit": 3,
  "ignoreDeps": [
    "@previewjs/api",
    "@previewjs/app",
    "@previewjs/app-foundations",
    "@previewjs/config",
    "@previewjs/core",
    "@previewjs/csf3",
    "@previewjs/e2e-test-runner",
    "@previewjs/iframe",
    "@previewjs/plugin-react",
    "@previewjs/plugin-solid",
    "@previewjs/plugin-svelte",
    "@previewjs/plugin-vue2",
    "@previewjs/plugin-vue3",
    "@previewjs/pro",
    "@previewjs/serializable-values",
    "@previewjs/type-analyzer",
    "@previewjs/vfs",
    "@types/vscode",
    "vscode"
  ],
  "ignorePaths": [
    "loader/src/release/**",
    "smoke-test-apps/**",
    "test-apps/**"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["*"],
      "rangeStrategy": "bump"
    }
  ]
}
