{
  "extends": [
    "config:best-practices",
    "config:js-lib"
  ],
  "ignoreDeps": [
    "@previewjs/api",
    "@previewjs/app",
    "@previewjs/chromeless",
    "@previewjs/config",
    "@previewjs/core",
    "@previewjs/iframe",
    "@previewjs/loader",
    "@previewjs/loader-release",
    "@previewjs/plugin-preact",
    "@previewjs/plugin-react",
    "@previewjs/plugin-solid",
    "@previewjs/plugin-svelte",
    "@previewjs/plugin-vue2",
    "@previewjs/plugin-vue3",
    "@previewjs/pro",
    "@previewjs/properties",
    "@previewjs/serializable-values",
    "@previewjs/storybook-helpers",
    "@previewjs/testing",
    "@previewjs/type-analyzer",
    "@previewjs/vfs",
    "@types/vscode",
    "node",
    "vscode"
  ],
  "ignorePaths": [
    "framework-plugins/**/apps/**",
    "loader/src/release/**"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "rangeStrategy": "bump",
      "matchPackageNames": [
        "*"
      ]
    }
  ],
  "prHourlyLimit": 1
}
